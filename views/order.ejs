<!DOCTYPE html>
<html lang="en">

<%- include('./header.ejs') %>
<body>
   <div class="container mt-5">
     <h2 class="text-center mt-5">Place Your Pizza Order</h2>
     <form action="/orders" method="POST" class="col-md-6 mt-5 mx-auto">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control mt-2 mb-3" name="name" placeholder="Enter Name" required>
        </div>
        <div class="form-group">
          <label>Pizza Type</label>
          <input type="text" class="form-control mt-2 mb-3" name="pizza" placeholder="Enter Pizza" required>
        </div>
        <div class="form-group">
          <label>Location</label>
          <input type="text" class="form-control mt-2 mb-3" name="Location" placeholder="Enter Location" required>
        </div>
        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
   </div>
</body>
<%- include('./footer.ejs') %>
</html>